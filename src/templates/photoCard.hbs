<li class="photo-card">
    <img class="photo-image" src="{{webformatURL}}" alt="photo-card" index="{{id}}" />
    <div class="stats">
        <p class="stats-item">
            <i class="material-icons">thumb_up </i><span class="info">{{likes}}</span>
        </p>
        <p class="stats-item">
            <i class="material-icons">visibility </i><span class="info">{{views}}</span>
        </p>
        <p class="stats-item">
            <i class="material-icons">comments </i><span class="info-com">{{comments}}</span>
        </p>
        <p class="stats-item">
            <i class="material-icons">cloud_download </i><span class="info">{{downloads}}</span>
        </p>
    </div>


